{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "/@/*": ["../renderer/main-ui/*"],
      "@styles/*": ["../renderer/main-ui/styles/*"],
      "@models/*": ["../models/*"],
      "@controllers/*": ["../controllers/*"],
      "@charts/*": ["../renderer/main-ui/charts/*"],
      "@widgets/*": ["../renderer/main-ui/widgets/*"],
      "@utils/*": ["../utils/*"]
    },
    "lib": ["ESNext", "dom", "dom.iterable"]
  },

  "include": [
    "../models/**/*",
    "../controllers/**/*",
    "../database/**/*",
    "../utils/**/*",
    "main-ui/**/*.scss",
    "main-ui/**/*.ts",
    "main-ui/**/*.js",
    "main-ui/**/*.tsx",
    "types/**/*.d.ts",
    "../../types/**/*.d.ts",
    "../preload/contracts.d.ts"
  ],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
