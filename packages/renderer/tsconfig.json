{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "/@/*": ["main-ui/*"]
    },
    "lib": ["ESNext", "dom", "dom.iterable"]
  },

  "include": [
    "main-ui/**/*.ts",
    "main-ui/**/*.js",
    "main-ui/**/*.tsx",
    "types/**/*.d.ts",
    "../../types/**/*.d.ts",
    "../preload/contracts.d.ts"
  ],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
