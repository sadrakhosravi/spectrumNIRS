{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "/@/*": ["renderer/main-ui/*"],
      "@styles/*": ["renderer/main-ui/styles/*"],
      "@models/*": ["renderer/main-ui/models/*"],
      "@viewmodels/*": ["renderer/main-ui/viewmodels/*"],
      "@services/*": ["services/*"],
      "@charts/*": ["renderer/main-ui/charts/*"],
      "@widgets/*": ["renderer/main-ui/widgets/*"],
      "@utils/*": ["utils/*"],
      "@database/*": ["renderer/main-ui/workers/database/*"],
      "@store": ["renderer/main-ui/viewmodels/VMStore.ts"],
      "@dataStore": ["renderer/main-ui/models/DataStore.ts"],
      "reader/*": ["renderer/reader/*"]
    },
    "incremental": true,
    "target": "es2021",
    "module": "commonjs",
    "lib": ["ESNext", "es2021", "dom", "dom.iterable"],
    "declaration": true,
    "declarationMap": true,
    "jsx": "react",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "types": ["node", "sharedworker"],
    "outDir": "release/app/dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": false
  },
  "exclude": ["test", "release/build", "release/app/dist", ".erb/dll"]
}
