{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      //React Related Paths
      "~/*": ["../*"],
      "@assets/*": ["../assets/*"],
      "@img/*": ["../assets/img/*"],
      "@icons/*": ["../assets/icons/*"],
      "@components/*": ["./renderer/components/*"],
      "@pages/*": ["./renderer/pages/*"],
      "@layout/*": ["./renderer/layout/*"],
      "@forms/*": ["./renderer/forms/*"],
      "@microComp/*": ["./renderer/components/MicroComponents/*"],
      "@hoc/*": ["./renderer/hoc/*"],
      "@chart/*": ["./renderer/Chart/*"],
      "@redux/*": ["./renderer/redux/*"],
      "@hooks/*": ["./renderer/hooks/*"],
      "@adapters/*": ["./renderer/adapters/*"],
      "@interfaces/*": ["./renderer/interfaces/*"],
      //Electron Related Paths

      "@electron/*": ["./main/*"],
      "@utils/*": ["./utils/*"]
    },
    "target": "es2020",
    "module": "CommonJS",
    "lib": ["dom", "es2020", "esnext"],
    "declaration": true,
    "declarationMap": true,
    "jsx": "react",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "release/app/dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },

  "exclude": ["test", "release/build", "release/app/dist", ".erb/dll"]
}
