{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "baseUrl": "./src",
    "paths": {
      //React Related Paths
      "@assets/*": ["../assets/*"],
      "@img/*": ["../assets/img/*"],
      "@icons/*": ["../assets/icons/*"],
      "@components/*": ["./renderer/components/*"],
      "@pages/*": ["./renderer/pages/*"],
      "@tooltip": ["./renderer/components/Tooltip/Tooltip.component"],
      "@microComp/*": ["./renderer/components/MicroComponents/*"],
      "@other/*": ["./renderer/components/Other/*"],
      "@chart/*": ["./renderer/components/Chart/*"],
      "@redux/*": ["./renderer/redux/*"],
      "@hooks/*": ["./renderer/hooks/*"],
      "@rendererController/*": ["./renderer/controllers/*"],
      //Electron Related Paths
      "@db/*": ["./main/db/*"],
      "@electron/*": ["./main/*"],
      "@ipc/*": ["./main/IPC/*"],
      "@readerFunctions/*": ["./main/readerFunctions/*"],
      "@readers/*": ["./main/readers/*"],
      "@controllers/*": ["./main/controllers/*"],
      "@helpers/*": ["./main/helpers/*"],
      "@workers/*": ["./main/Workers/*"],
      //Database
      //Typescript Extra
      "@constants/*": ["./renderer/constants/*"]
    },
    "lib": ["dom", "esnext"],
    "declaration": true,
    "declarationMap": true,
    "jsx": "react",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "release/app/dist"
  },

  "exclude": ["test", "release/build", "release/app/dist", ".erb/dll"]
}
